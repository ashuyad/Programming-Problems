#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
   
    
        int n,i,k,max=0;
        cin>>n>>k;
        int a[n];
        for(i=0;i<n;i++)
        {
            cin>>a[i];
          if(a[i]>max)
              max=a[i];
    }
    
       if(k>=max)
           cout<<"0"<<endl;
        else
            cout<<(max-k)<<endl;
   
    return 0;
}
